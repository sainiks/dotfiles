#!/bin/bash

# --- GLOBAL SETTINGS ---
sketchybar --bar height=36 \
                 position=top \
                 sticky=on \
                 padding_left=10 \
                 padding_right=10 \
                 color=0x00000000 \
                 margin=10 \
                 blur_radius=20

# --- DEFAULTS ---
sketchybar --default icon.font="JetBrainsMono Nerd Font:Bold:14.0" \
                     icon.color=0xffffffff \
                     label.font="JetBrainsMono Nerd Font:Bold:14.0" \
                     label.color=0xffffffff \
                     background.color=0x40000000 \
                     background.corner_radius=5 \
                     background.height=26 \
                     padding_left=5 \
                     padding_right=5

# --- LEFT SIDE: WORKSPACES (1-5) ---
for i in 1 2 3 4 5
do
  sketchybar --add space space.$i left \
             --set space.$i associated_space=$i \
                            icon=$i \
                            icon.font="JetBrainsMono Nerd Font:Bold:16.0" \
                            icon.padding_left=10 \
                            icon.padding_right=10 \
                            background.padding_left=2 \
                            background.padding_right=2 \
                            label.drawing=off \
                            script="~/.config/sketchybar/plugins/space.sh"
done

# --- LEFT SIDE: APPLE LOGO ---
sketchybar --add item apple left \
           --set apple icon=􀣺 \
                 icon.font="SF Pro:Bold:14.0" \
                 icon.color=0xffffffff \
                 background.drawing=off

# --- RIGHT SIDE: CLOCK ---
sketchybar --add item clock right \
           --set clock update_freq=1 \
                 icon= \
                 script="~/.config/sketchybar/plugins/clock.sh"

# --- RIGHT SIDE: BATTERY ---
sketchybar --add item battery right \
           --set battery update_freq=120 \
                 script="~/.config/sketchybar/plugins/battery.sh"

# --- RIGHT SIDE: RAM MONITOR ---
sketchybar --add item ram right \
           --set ram update_freq=10 \
                 icon= \
                 script="~/.config/sketchybar/plugins/ram.sh"

# --- APPLY ---
sketchybar --update
