# --- CORE: Performance & Shell ---
command = /bin/zsh

# --- Background Image ---
# path to your image
background-image = /Users/kixel/Pictures/whitesnow.png

#Set the background base to pure black
background = #000000

# How strictly it fits the window: 'cover', 'contain', or 'stretch'
background-image-fit = cover

# 0.1 = Faint watermark. 1.0 = Full brightness.
# Keep this low (0.2 - 0.4) so you can still read your text!
background-image-opacity = 0.25

# Merges tabs into the window title (VS Code style)
macos-titlebar-style = tabs

# Hides the small folder icon in the title bar (cleaner look)
macos-titlebar-proxy-icon = hidden

# --- AESTHETICS: The "Rice" Look ---
# Remove the native macOS title bar so it sits flush with Sketchybar
window-decoration = true
# Enable blur to match macOS "frosted glass" (Aerospace/Sketchybar style)
background-opacity = 1.0
background-blur-radius = 10
# Add slight padding so text doesn't hit the window edges
window-padding-x = 4
window-padding-y = 4
# Hide the mouse when you start typing code
mouse-hide-while-typing = true

# --- FONTS: Coding Comfort ---
# Ensure you have a Nerd Font installed (e.g., JetBrainsMono Nerd Font)
font-family = "JetBrainsMono Nerd Font"
font-size = 14
# Enable ligatures (makes =>, !=, -> look like math symbols)
font-feature = calt
font-feature = liga

# --- WINDOW MANAGEMENT ---
# If you use 'tmux' or 'zellij', you usually want this off.
# If you use native Ghostty tabs, keep it on.
window-save-state = always

# --- AI/ML UTILITY ---
# Copy on select (useful for quick stackoverflow pastes)
copy-on-select = true

# --- COLORS (Catppuccin Mocha - Best for long coding sessions) ---
# You can change this to "Tokyo Night" or "Dracula" if preferred
theme = catppuccin-mocha
